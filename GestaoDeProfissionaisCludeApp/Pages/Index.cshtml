@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <div class="container align-content-sm-end">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#cadastro">
            Adicionar
        </button>
    </div>

    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Especialidade</th>
            <th>Tipo do Documento</th>
            <th>Número do Documento</th>
            <th>Ações</th>
        </tr>
        <tr>
            <td><code></code></td>
            <td><code></code></td>
            <td><code></code></td>
            <td><code></code></td>
            <td><code></code></td>
            <td><code></code></td>
            <td>
                <div class="dropdown">
                    <button class="btn " type="button" id="ddAcoes"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                            <path
                                d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                        </svg>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="ddAcoes">
                        <button class="dropdown-item" type="button">Action</button>
                        <button class="dropdown-item" type="button">Another action</button>
                        <button class="dropdown-item" type="button">Something else here</button>
                    </div>
                </div>
            </td>
        </tr>
    </table>




    <div class="modal" id="cadastro" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cadastro do Profissional</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label>Nome</label>
                    <label>Especialidade</label>
                    <label>Tipo do Documento</label>
                    <label>Número do documento</label>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-outline-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>
